#navbar
    .navbar.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                if user
                    a.navbar-brand(href="/")
                        span.glyphicon.glyphicon-home
            .navbar-collapse.collapse
                if user
                    #navigation-bar
                        ul.nav.navbar-nav(ng-repeat="group in navigation.groups")
                            li.dropdown
                                a(href="#", data-toggle="dropdown").dropdown-toggle {{group.name}} 
                                    b.caret
                                ul.dropdown-menu
                                    li(ng-repeat="item in group.items")
                                        a(href="{{item.path}}")
                                            span(class="{{item.icon}}")
                                            |  {{item.name}}
                ul.nav.navbar-nav.navbar-right
                    include profile