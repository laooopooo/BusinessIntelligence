#navbar(ng-controller="NavbarCtrl")
    .navbar.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                if user
                    a.navbar-brand(href="/", ng-click="setNavigation('home')")
                        span.glyphicon.glyphicon-home
            .navbar-collapse.collapse
                if user
                    #navigation-bar
                        ul.nav.navbar-nav(ng-repeat="group in navigation.groups", ng-switch on="group.type")
                            li.dropdown(ng-switch-when="dropdown", ng-class="(navigation.activeGroupName==group.name) ? 'active' : ''")
                                a(href="#", data-toggle="dropdown", id="{{group.name}}").dropdown-toggle
                                    span(class="{{group.icon}}")
                                    |  {{group.name}} 
                                    b.caret
                                ul.dropdown-menu
                                    li(ng-repeat="item in group.items")
                                        a(href="{{item.path}}", id="{{item.name}}", ng-click="setNavigation(group.name)")
                                            span(class="{{item.icon}}")
                                            |  {{item.name}}
                            li(ng-switch-when="button", ng-class="(navigation.activeGroupName==group.name) ? 'active' : ''")
                                a(href="{{group.path}}", id="{{group.name}}", ng-click="setNavigation(group.name)")
                                            span(class="{{group.icon}}")
                                            |  {{group.name}}
                ul.nav.navbar-nav.navbar-right
                    include profile