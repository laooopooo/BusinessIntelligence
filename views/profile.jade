#nav-bar-profile
    if user
        #user
    else
        form#loginform.navbar-form(method="post", action="/")
            .form-group
                input.form-control(placeholder="Username", name="username")
            .form-group
                input.form-control(type="password", placeholder="Password", name="password")
            input(type="submit", value="Sign in")#btn-signin.btn.btn-success
            input(type="submit", value="Sign up")#btn-signup.btn.btn-default
            script.
                $(function () {
                    $('#btn-signin').click(function () {
                        $('#loginform').attr('action', '/signin');
                    });

                    $('#btn-signup').click(function () {
                        $('#loginform').attr('action', '/signup');
                    });
                });