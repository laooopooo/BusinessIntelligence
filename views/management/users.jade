extends ./layout

block management-content
    div(ng-controller="UsersCtrl")
        h2 Users
        table.table.table-striped
            tbody
                th #
                th Email
                th First Name
                th Last Name
                th Groups
            tr(ng-repeat="user in users")
                td {{$index + 1}}
                td {{user.email}}
                td {{user.first_name}}
                td {{user.last_name}}
                td {{user.groups.join(', ')}}