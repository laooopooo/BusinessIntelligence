table.table.table-striped
    thead
        th Affects Task
        th Affect Description
    tbody
        tr(ng-repeat="affect in condition.affects")
            td
                p.form-control-static {{affect.task.name}}
            td
                input.form-control(ng-model="affect.description")
            td.col-td-min.align-middle
                a(ng-click="removeAffect(affect)")
                    span.glyphicon.glyphicon-remove
.row
    .col-md-6
        input.form-control(ng-model="condition.searchAffectTask", typeahead="task as task.name for task in searchTasks($viewValue)", typeahead-on-select="pushAffect($item)", placeholder="Search for task")
    .col-md-6