.well(ng-show="task.inputs.length")
    label Inputs:
    .well(ng-repeat="input in task.inputs")
        .form-group
            label Input {{alphaOrder(task.inputs, input)}}:
            table.table.table-striped(style="margin-bottom: 0px")
                thead
                    th Condition
                    th Enter from UI
                    th Enter via API
                    th Generated by Task
                    th Note
                tbody
                    tr(ng-repeat="condition in input.conditions")
                        td
                            include partial_condition_icon
                            |  
                            a(ng-click="viewCondition(condition)") {{condition.name}}
                        td
                            | {{condition.ui.input}}
                        td
                            | {{condition.api.input}}
                        td
                            img(src="/public/images/loader.gif", ng-show="!condition.generatedByTasksLoaded")
                            a(ng-repeat="producerTask in getGeneratedByTasks(condition)", ng-href="/task/view/{{producerTask.id}}") {{producerTask.name}}
                        td
                            span(popover="{{condition.note}}", popover-trigger="mouseenter", popover-popup-delay="300") {{trimText(condition.note, 25)}}