.well(ng-show="task.affects.length")
    label Alternative Outputs:
    .well
        .form-group
            table.table.table-striped
                thead
                    th Outcome
                    th Caused By
                    th Generated by Task
                tbody
                    tr(ng-repeat="affect in task.affects")
                        td.col-md-3
                            div(ng-repeat="conditionAffect in affect.condition.affects")
                                | {{conditionAffect.description}}
                        td.col-md-3
                            include partial_condition_icon
                            |  
                            a(ng-click="viewCondition(affect.condition)") {{affect.condition.name}}
                        td.col-md-6
                            img.loader(src="/public/images/loader.gif", ng-show="!affect.condition.producerTasksLoaded")
                            div(ng-repeat="producerTask in getProducerTasks(affect.condition)")
                                a(ng-href="/task/view/{{producerTask.id}}", popover="{{producerTask.description}}", popover-trigger="mouseenter", popover-popup-delay="300", popover-placement="right") {{producerTask.name}}